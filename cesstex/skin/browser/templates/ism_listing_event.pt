<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>

    <div metal:fill-slot="main">
    <metal:main-macro define-macro="main"
                      tal:define="kssClassesView context/@@kss_field_decorator_view;
                                  getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                                  templateId template/getId">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 metal:use-macro="here/kss_generic_macros/macros/generic_title_view">
            Title or id
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <p metal:use-macro="here/kss_generic_macros/macros/generic_description_view">
            Description
        </p>

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <div metal:define-macro="text-field-view"
             id="parent-fieldname-text" class="stx"
             tal:define="kss_class python:getKssClasses('text',
                         templateId=templateId, macro='text-field-view');
                         text here/aq_explicit/getText|nothing"
             tal:condition="text"
             tal:attributes="class python:test(here.Format() in ('text/structured',
                                                   'text/x-rst', ), 'stx' + kss_class, 'plain' + kss_class)">
            <div metal:define-slot="inside" tal:replace="structure text">The body</div>
        </div>
        <tal:ismnews tal:define="events nocall:view/getEvents;
                                 convert nocall:context/@@plone/toLocalizedTime;
                                 getEventsIconURL nocall:view/getEventsIconURL;">
            <tal:boucle tal:repeat="item events">
                <div tal:define="event item/getObject"
                     class="clpsnews">
                    <!-- div id="clpsnews-image"
                             tal:define="imgURL python:getEventsIconURL(item);">
                        <img src="" tal:attributes="src string: ${item/getURL}/${imgURL}" />
                    </div-->

                    <div>
                        <table class="ism-news">
                            <tr>
                                <td class="ism-news-left"></td>
                                <td class="ism-news-center">
                                    <div class="ism-news-title-content">
                                        <div class="ism-news-title-link">
                                            <a href="" 
                                               title=""
                                               tal:attributes="href item/getURL;
                                                               title item/Description"
                                               tal:content="item/pretty_title_or_id" />
                                        </div>
                                    </div>
                                </td>
                                <td class="ism-news-right"></td>
                            </tr>
                            <tr>
                                <td class="ism-news-content"></td>
                                <td class="ism-news-content">
                                    <div class="ism-news-info">
                                        <p class="ism-news-subject">
                                            (<span tal:content="python:modules['string'].join(item.Subject, ' ')" />)
                                        </p>
                                    </div>
                                    <div class="ism-news-info">
                                        <span class="ism-news-rubrique">&equiv; Quand :</span>
                                        Du <span tal:content="python:toLocalizedTime(item.start, long_format=1)"
                                                 class="ism-news-date" />
                                        au <span tal:content="python:toLocalizedTime(item.end, long_format=1)"
                                                 class="ism-news-date" />
                                    </div>
                                    <div class="ism-news-info">
                                        <span class="ism-news-rubrique">&equiv; Qui :</span>
                                        <span tal:content="python:modules['string'].join(event.attendees, ' ')"
                                              class="ism-news-attendees" />
                                    </div>
                                    <br />
                                    <div class="ism-news-info">
                                        <p class="ism-news-rubrique"
                                           tal:condition="item/Description">&equiv; Résumé :</p>
                                        <p tal:content="item/Description"
                                           class="ism-news-entete"></p>
                                        <p class="ism-news-rubrique"
                                           tal:condition="event/getText">&equiv; Détail :</p>
                                        <p class="ism-news-contenu">
                                            <span tal:replace="structure event/getText" />
                                        </p>
                                    </div>
                                    <div class="ism-news-info">
                                        <span class="ism-news-rubrique">&equiv; Où :</span>
                                        <span tal:content="item/location | string:-"
                                              class="ism-news-location" />
                                    </div>
                                     
                                    <div class="ism-news-info">
                                        <span class="ism-news-rubrique">&equiv; Contact :</span>
                                        <span tal:content="event/contact_name | string:-"
                                              class="ism-news-contact" />
                                        <br />
                                        <span class="ism-news-rubrique">&equiv; Professeur organisateur :</span>
                                        <span tal:content="event/profResponsable | string:-"
                                              class="ism-news-contact" />
                                        <br />
                                        <span class="ism-news-rubrique">&equiv; Professeurs accompagant :</span>
                                        <span tal:content="event/profsAccompagnateurs | string:-"
                                              class="ism-news-contact" />
                                    <div> 
                                     
                                </td><!--ism-news-center-->
                                <td class="ism-news-content"></td>
                            </tr>
                            <tr>
                                <td class="ism-news-footer-left"></td>
                                <td class="ism-news-footer-center"></td>
                                <td class="ism-news-footer-right"></td>
                            </tr>
                        </table>
                    </div><!--newscontent--> 
                </div><!--define getobject-->
            </tal:boucle>
        </tal:ismnews>
        <metal:subtopics use-macro="here/atct_topic_view/macros/folderlisting_macro" />

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </metal:main-macro>
    </div>

</body>
</html>
