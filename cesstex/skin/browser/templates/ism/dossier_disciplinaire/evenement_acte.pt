<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
    <script src="validate_forms.js" type="text/javascript"></script>
    <metal:noborder fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border',1)" />

    <metal:js fill-slot="javascript_head_slot">
        <script src="++resource++collective.javascript.jqueryui/js/jquery-1.4.2.min.js" type="text/javascript"></script>
        <script src="++resource++collective.javascript.jqueryui/js/jquery-ui.min.js" type="text/javascript"></script>

        <script src="validate_forms.js" type="text/javascript"></script>
        <script src="++resource++ism.js" type="text/javascript"></script>
    </metal:js>
    <metal:css fill-slot="style_slot">
        <link href="++resource++collective.javascript.jqueryui/css/ui-lightness/jquery-ui.css" type="text/css" rel="stylesheet" />
    </metal:css>

</head>

<body>
<div metal:fill-slot="main"
     tal:define="elevePk request/elevePk;
                 eleve python: view.getElevesByPk(elevePk);
                 dossier python: view.getDossierByEleve(elevePk);
                 dossierDisciplinairePk dossier/dosdis_pk;
                 evenements python: view.getAllEvenementByDossier(dossierDisciplinairePk)">

    <h1>Gestion des dossiers disciplinaires</h1>
    <div class="formulaire">
        <div class="table-donne-db">
            <h2 class="formulaire-titre">Informations sur l'élève'</h2>
            <ul>
                <li>
                    Elève :
                    <span tal:content="eleve/eleve_nom">nom eleve</span>
                    <span tal:content="eleve/eleve_prenom">prenom eleve</span>
                </li>
                <li>
                    Classe :
                    <span tal:content="eleve/eleve_classe">classe eleve</span>
                </li>
                <li>
                    Titulaire 1 :
                    <span tal:content="eleve/titulaire01/prof_nom">titulaire 1</span>
                    <span tal:content="eleve/titulaire01/prof_prenom">titulaire 1</span>
                </li>
                <li>
                    Titulaire 2 :
                    <span tal:content="eleve/titulaire02/prof_nom">titulaire 1</span>
                    <span tal:content="eleve/titulaire02/prof_prenom">titulaire 1</span>
                </li>
            </ul>
        </div>
        <div id="info-dossier">
            <ul>
                <li>
                    Date de création :
                    <span tal:content="dossier/dosdis_date_creation">date creation</span>
                </li>
                <li>
                    Année scolaire :
                    <span tal:content="dossier/dosdis_annee_scolaire">annee scolaire</span>
                </li>
                <li>
                    Etat du dossier :
                    <span tal:content="dossier/dosdis_actif">etat dossier</span>
                </li>
                <li>
                    Auteur :
                    <span tal:content="dossier/auteur/prof_nom">auteur</span>
                    <span tal:content="dossier/auteur/prof_prenom">auteur</span>
                </li>
            </ul>
        </div>
    </div>
    
    <div class="formulaire">        
        <h2 class="formulaire-titre">Evénements liés au dossier</h2>
        <tal:block tal:repeat="evenement evenements">
            <div class="evenement-acte">
                <ul>
                    <li>
                        Date : <br />
                        <span tal:content="evenement/eventact_date_creation">date creation</span>
                    </li>
                    <li>
                        Evénement : <br />
                        <span tal:content="evenement/eventact_evenement">evenement</span>
                    </li>
                    <li>
                        Sanction : <br />
                        <span tal:content="evenement/eventact_sanction">sanction</span>
                    </li>
                    <li>
                        Intervenant : <br />
                        <span tal:content="evenement/eventact_intervenant">intervenant</span>
                    </li>
                    <li>
                        Etat : <br />
                        <span tal:content="evenement/etat/etat_titre">etat</span>
                    </li>
                </ul>
            </div>
        </tal:block>
    </div>
    
    <div class="formulaire">        
        <h2 class="formulaire-titre">Ajouter un nouvel événement au dossier</h2>
        <form action="insertEvenementActe"
              method="post">
            <div class="formulaire-input">
                <label for="evenement">Evénement</label>
                <textarea name="evenement"
                          id="evenement"
                          rows="6"
                          cols="70"></textarea>
            </div>
            <div class="formulaire-input">
                <label for="sanction">Sanction</label>
                <textarea name="sanction"
                          id="sanction"
                          rows="6"
                          cols="70"></textarea>
            </div>
            <div class="formulaire-input">
                <label for="intervenant">Intervenant</label>
                <textarea name="intervenant"
                          id="intervenant"
                          rows="6"
                          cols="70"></textarea>
            </div>
            <div class="formulaire-input">
                <label for="fichierAttache">Joindre un document</label>
                <input type="file"
                       name="fichierAttache"
                       id="fichierAttache"
                       value=""
                       size="50" />
            </div>
            <div class="formulaire-input">
                <label for="titulaire02Pk">Etat</label>
                <tal:block tal:define="etats python: view.getAllEtatPublication()">
                    <select name="etatPublication"
                            id="etatPublication">
                        <option value="">...</option>
                        <tal:boucle tal:repeat="etat etats">
                            <option value=""
                                    tal:attributes="value etat/etat_pk">
                                <span tal:content="etat/etat_titre" />
                            </option>
                        </tal:boucle>
                    </select>
                </tal:block>
            </div>
            <div class="formulaire-submit">
                <input type="hidden"
                       name="operation"
                       value="insert" />
                <input type="hidden"
                       name="dossierDisciplinairePk"
                       value=""
                       tal:attributes="value dossierDisciplinairePk" />
                <input type="submit"
                       value="Ajouter un événement" />
            </div>
        </form>
    </div>
</div><!-- div metal-->
</body>
</html>

